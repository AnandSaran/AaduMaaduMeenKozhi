<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="handlers"
            type="com.aadu_maadu_kozhi.gregantech.adapter.viewholder.ChatListNameViewHolder" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvParent"
        android:onClick="@{handlers::onClick}"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_8"

        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <ImageView
            android:id="@+id/ivUserProfile"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/circle"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:singleLine="true"
            android:ellipsize="end"

            tools:text="John Doe ;lafjjkllafe kjafkjh afbjkhaknafnkfnkakfnnkfasankfsnkf"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            app:layout_constraintLeft_toRightOf="@+id/ivUserProfile"
            app:layout_constraintTop_toTopOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent" />
        <View
            android:id="@+id/vOnline"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/dp_3"
            android:background="@drawable/online_circle"
            android:visibility="gone"

            card_view:layout_constraintBottom_toBottomOf="@+id/ivUserProfile"
            card_view:layout_constraintEnd_toEndOf="@+id/ivUserProfile" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>